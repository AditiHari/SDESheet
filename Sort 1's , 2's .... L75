//Better/ Brute force (1st Approach)

class Solution {
    public void sortColors(int[] nums) {
        int s=nums.length,k=0;
        int[] arr= new int[s];
        for(int i=0;i<s;i++)
        {if(nums[i]==0)
        arr[k++]=nums[i];
        }
        for(int i=0;i<s;i++)
        {if(nums[i]==1)
        arr[k++]=nums[i];
        }
        for(int i=0;i<s;i++)
        {if(nums[i]==2)
        arr[k++]=nums[i];
        }
        for(int i=0;i<s;i++)
        {
        nums[i]=arr[i];
        }
     }
  }
  
  
//OPTIMAL SOLUTION USING DUTUCH NATIONAL FLAG ALGORITHM
class Solution {
 public void sortColors(int[] nums) {
int low = 0 ; int high = nums.length-1; int mid = 0 ;
         while (mid <= high){
             if (nums[mid]== 0){
                 int temp = nums[mid];
                 nums[mid] = nums[low];
                 nums[low] = temp;
                 low++;
                 mid++;
             }
             else if(nums[mid] == 1){
                 mid++;
             }
             else{
                 int temp = nums[ mid];
                 nums[mid] = nums[high];
                 nums[high] = temp;      
                 high--;
                        }
        }
}}
